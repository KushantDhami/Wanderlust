<body>
    <% layout("./layouts/boilerplate.ejs") -%>
    <div class="row mt-2">
        <div class="col-8 offset-2">
            <h1 class="my-3">Edit List</h1>
            <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <lable class="form-lable" for="title">Title</lable>
                    <input name="listing[title]" value="<%=listing.title%>" class="form-control"required />
                    <div class="invalid-feedback">Enter Valid Title</div>
                </div>
                <div class="mb-3">
                    <lable class="form-lable" for="description">description</lable>
                    <textarea rows="3" name="listing[description]" class="form-control" required> <%=listing.description%></textarea>
                    <div class="invalid-feedback">Enter Valid description</div>
                </div>

                <div class="mb-3 ">
                    <img src="<%=image %>" class="show-img"/>
                </div>

                <div class="mb-3">
                     <lable class="form-lable" for="image" >Upload Image</lable>
                     <input type="file" name="listing[image]"  class="form-control"/>
                </div>
        <div class="row">
            
            <div class="mb-3 col-md-4">
                <lable class="form-lable" for="price">Price</lable>
                <input name="listing[price]" value="<%=listing.price%>" class="form-control"required />
                <div class="invalid-feedback">Enter Valid Price</div>
            </div>
            <div class="mb-3 col-md-8">
                <lable class="form-lable" for="coutry">country</lable>
                <input name="listing[country]" value="<%=listing.country%>" class="form-control"required />
                <div class="invalid-feedback">Enter Valid country</div>
            </div>
        </div>
        <div class="mb-3">
            <lable class="form-lable" for="location">Location</lable>
            <input name="listing[location]" value="<%=listing.location%>" class="form-control"required />
            <div class="invalid-feedback">Enter Valid Location</div>
        </div>
        <button class="btn btn-dark edit-btn ">Edit</button>
    </form>
    </div>
</div>
</body>
