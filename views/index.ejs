<body>

    <% layout("./layouts/boilerplate.ejs") %>
    <div class="filters">

        <div  class="filter">
            <div> <i class="fa-solid fa-fire"></i>
                <p>Trending</p>
            </div>
        </div>

        <div class="filter">
            <div> <i class="fa-solid fa-bed"></i>
                <p>Rooms</p>
            </div>
        </div>

        <div class="filter">
            <div> <i class="fa-solid fa-mountain-city"></i>
                <p>Iconic cities</p>
            </div>
        </div>

        <div class="filter">
            <div> <i class="fa-solid fa-mountain"></i>
                <p>Mountain</p>
            </div>
        </div>

        <div class="filter">
            <div> <i class="fa-solid fa-chess"></i>
                <p>Castles</p>
            </div>
        </div>

        <div class="filter">
            <div> <i class="fa-solid fa-tractor"></i>
                <p>Farms</p>
            </div>
        </div>

        <div class="filter">
            <div> <i class="fa-solid fa-campground"></i>
                <p>Camping</p>
            </div>
        </div>

        <div class="filter">
            <div> <i class="fa-solid fa-snowflake"></i>
                <p>Arctic</p>
            </div>
        </div>

        <div class="filter">
            <div> <i class="fa-solid fa-person-swimming"></i>
                <p>Swimming pools</p>
            </div>
        </div>

    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2"> 
    <% for(let listing of listings){%>
        <a href="/listings/<%= listing._id%>" class="link-img">

            <div class="card col my-3 img-s-s" >
                <img src="<%=listing.image.url %>" class="card-img-top img-s" alt="<%= listing.title%>" style="height: 20rem">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text"><b><%=listing.title %></b><br>
                        &#8377;<%=listing.price.toLocaleString("en-IN") %>/ night
                    </p>
                </div>
            </div>
        </a>
        <%} %>
    </div>
</body>
    
    
    